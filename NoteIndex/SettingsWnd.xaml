                Background="#232323" BorderThickness="1.5">
            <TextBlock Text="THIS OPTION IS UNDER PROCESS" Foreground="White" FontSize="20"
                       FontWeight="SemiBold" VerticalAlignment="Center" HorizontalAlignment="Center" FontFamily="MV Boli"/>
        </Border>
    </Grid>
</UserControl>
